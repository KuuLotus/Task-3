  <!--User info,New book-->
  <%=render "list",book:@book,user:@user%>
  <!--投稿一覧-->
    <div class=" col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
          <tr>
            <td><%=link_to user_path(f.user.id) do%>
                  <%=image_tag f.user.get_profile_image(100,100)%></td>
                <%end%>
            <td><%=link_to f.title,book_path(f.id)%></td>
            <td><%=f.body%></td>
         </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>