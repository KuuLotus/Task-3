<!--User info,New book-->
<%=render "books/list",book:@book,user:@user%>
    <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |f|%>
          <tr>
            <td><%=image_tag f.get_profile_image(100,100)%></td>
            <td><%=f.name%></td>
            <td><%=f.introduction%></td>
            <td><%=link_to "Show",user_path(f.id)%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>